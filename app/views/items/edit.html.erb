<%= render "shared/header" %>

<div class="container col-md-4">
  <h3 class="pt-3 mb-5">アイテムを編集しよう！</h3>
  <%= form_with model: @item, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <form>
      <div class="form-group">
        <label for="exampleFormControlTextarea1" class="font-weight-bold">画像
        <span class="badge badge-pill badge-danger">必須</span></label>
        <%= f.file_field :image, id:"item-image" %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect1" class="font-weight-bold" >カテゴリー
        <span class="badge badge-pill badge-danger">必須</span></label>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-control"}) %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect2" class="font-weight-bold">ブランド
        <span class="badge badge-pill badge-danger">必須</span></label>
        <%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class:"form-control"}) %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect3" class="font-weight-bold">色
        <span class="badge badge-pill badge-danger">必須</span></label>
        <%= f.collection_select(:color_id, Color.all, :id, :name, {}, {class:"form-control"}) %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect4" class="font-weight-bold">サイズ
        <span class="badge badge-pill badge-danger">必須</span></label>
        <%= f.collection_select(:size_id, Size.all, :id, :name, {}, {class:"form-control"}) %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea2" class="font-weight-bold">購入価格</label>
        <%= f.text_area :price, placeholder: "購入価格", class:"form-control", rows:"1" %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea3" class="font-weight-bold">購入日</label>
        <%= f.text_area :purchase_date, placeholder: "購入日", class:"form-control", rows:"1" %>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea4" class="font-weight-bold">メモ</label>
        <%= f.text_area :memo, placeholder: "メモ", class:"form-control", rows:"2" %>
      </div>

      <%= f.submit "変更する", class:"btn btn-primary" %>

      </div>
    </form>
  <% end %>
</div>

<%= render "shared/footer" %>
