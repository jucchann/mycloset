<%= render "shared/header" %>

<div class="index-top d-flex align-items-center justify-content-center">
  <div class="h1 text-center text-white font-weight-bold">アイテム一覧</div>
</div>


<div class="container-fluid py-3">
  <div class="container">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <div class="card mb-4">
          <%= image_tag item.image, class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= item.category.name %></h5>
              <p class="card-text"><%= item.brand.name %></p>
              <%= link_to "詳細", item_path(item.id), class:"card-link" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= render "shared/footer" %>
